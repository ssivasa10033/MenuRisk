# MenuRisk Environment Configuration
# Copy this file to .env and customize for your environment

# Environment
ENVIRONMENT=development  # development, production, or testing

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=change-me-in-production-use-secure-random-string

# Financial Parameters (Canadian market defaults)
RISK_FREE_RATE=0.0225  # Bank of Canada overnight rate
SHARPE_KEEP_THRESHOLD=1.5
SHARPE_MONITOR_THRESHOLD=0.8

# Model Settings
TUNE_HYPERPARAMS=true
MODEL_N_ESTIMATORS=300
CV_SPLITS=5
TEST_SIZE_DAYS=30
MIN_OBSERVATIONS=30

# File Upload
MAX_UPLOAD_SIZE_MB=16.0
UPLOAD_DIR=uploads
MODEL_DIR=models
CHARTS_DIR=static/charts

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=text  # text or json

# MLflow (optional)
MLFLOW_ENABLED=false
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=menurisk-demand-forecasting

# Grafana (for Docker deployment)
GRAFANA_PASSWORD=admin
